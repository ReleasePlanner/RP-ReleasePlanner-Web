{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "types": [
      "node"
    ],
    "rootDir": "src",
    "moduleResolution": "node",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "baseUrl": ".",
    "paths": {
      "@rp-release-planner/shared/types": ["../../libs/shared/types/src/index.ts"],
      "@rp-release-planner/shared/utils": ["../../libs/shared/utils/src/index.ts"],
      "@rp-release-planner/api/common": ["../../libs/api/common/src/index.ts"],
      "@rp-release-planner/rp-shared": ["../../libs/rp-shared/src/index.ts"]
    },
    "typeRoots": ["../../node_modules/@types", "node_modules/@types"],
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "lib": ["es2022"],
    "composite": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.ts",
    "jest.config.cts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*test*.ts",
    "src/**/tests/**",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
  "references": [
    {
      "path": "../../libs/rp-shared/tsconfig.lib.json"
    }
  ]
}
